@page "/"
@using WebApp.ViewModels
@rendermode InteractiveServer
@inherits MasonryGalleryViewModel

<div class="grid are-images-unloaded">
    <div class='grid__col-sizer'></div>
    @if (Images != null)
    {
        @foreach (var image in Images)
        {
            <div class="grid__item">
                @if (IsImage(image)) {
                    <img src="@image" alt="Media" class="img-fluid" style="object-fit:cover;" />
                } else if (IsVideo(image)) {
                    <video controls autoplay muted class="img-fluid" src="@image" style="object-fit:cover;">
                    </video>
                }
            </div>
        }
    }
</div>